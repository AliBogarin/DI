<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
   <!--El boton que se visualizará cuando aprima un elemento e inicialice
        el DetailActivity-->

    <TextView
        android:id="@+id/title_detail"
        style="@style/CustonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Titulo"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!--Aquí es donde llamo a img para poder visualizar la imagen de forma redondeada-->

    <ImageView
        android:id="@+id/view_image_detail"
        android:src="@drawable/circulo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_detail"
        />

    <TextView
        android:id="@+id/textView_description_detail"
        style="@style/CustonText2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="descripción"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/view_image_detail"
        android:theme="@style/CustonTheme"/>



</androidx.constraintlayout.widget.ConstraintLayout>